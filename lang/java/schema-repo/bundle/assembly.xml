  </formats>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <includes>
        <include>*withdeps.jar</include>
      </includes>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../</directory>
      <includes>
        <include>config.properties</include>
      </includes>
      <outputDirectory>config</outputDirectory>
